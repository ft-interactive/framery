{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./lib"
  },
  "compileOnSave": false,
  "filesGlob": [
    "./typings/index.d.ts",
    "./lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./typings/index.d.ts",
    "./lib/index.ts",
    "./lib/routes.ts",
    "./lib/test/index.spec.ts",
    "./lib/test/routes.spec.ts"
  ]
}
